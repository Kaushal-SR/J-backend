generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// *
///  * Hiragana characters
///  * Example: あ, い, う
model Hiragana {
  id          String   @id @default(uuid())
  symbol      String   @unique
  romaji      String
  explanation String
  example     String?
  imageUrl    String?
  audioUrl    String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

/// *
///  * Katakana characters
///  * Example: ア, イ, ウ
model Katakana {
  id          String   @id @default(uuid())
  symbol      String   @unique
  romaji      String
  explanation String
  example     String?
  imageUrl    String?
  audioUrl    String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model User {
  id         String         @id @default(uuid())
  email      String         @unique
  password   String
  role       Role           @default(USER)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  progresses UserProgress[]
}

/// Tracks user progress for kana, kanji, vocab
model UserProgress {
  id         String       @id @default(uuid())
  userId     String
  itemId     String
  itemType   ProgressType
  learned    Boolean      @default(false)
  bookmarked Boolean      @default(false)
  quizScore  Int?
  updatedAt  DateTime     @updatedAt
  user       User         @relation(fields: [userId], references: [id])
  vocabulary Vocabulary?  @relation("UserProgressToVocabulary", fields: [itemId], references: [id])

  @@unique([userId, itemId, itemType])
}

/// *
///  * Vocabulary words (JLPT based)
model Vocabulary {
  id        String   @id @default(uuid())
  word      String
  meaning   String
  furigana  String?
  romaji    String?
  level     Int
  createdAt DateTime @default(now())
  userProgresses UserProgress[] @relation("UserProgressToVocabulary")

  @@unique([word, level])
}

enum Role {
  ADMIN
  USER
}

enum ProgressType {
  HIRAGANA
  KATAKANA
  KANJI
  VOCAB
}

/// *
///  * Kanji characters (JLPT based)
model Kanji {
  id           String   @id @default(uuid())
  character    String   @unique
  meaning      String
  onyomi       String[]
  kunyomi      String[]
  strokes      Int
  jlptLevel    String
  radicals     String[]
  status       String?
  reviewCount  Int?
  isBookmarked Boolean  @default(false)
  examples     Json?
  createdAt    DateTime @default(now())
}
